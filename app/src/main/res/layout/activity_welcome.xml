<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bg_light_purple">

    <ImageView
        android:id="@+id/imgLogoWelcome"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/logo_monaco"
        android:src="@drawable/logo_monaco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/monaco_purple"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgLogoWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvWelcomeUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botones si NO hay sesión -->
    <LinearLayout
        android:id="@+id/layoutNoSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:backgroundTint="@color/monaco_purple"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:backgroundTint="@color/white"
            android:textColor="@color/monaco_purple" />
    </LinearLayout>

    <!-- Botones si hay sesión iniciada -->
    <LinearLayout
        android:id="@+id/layoutSessionActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter"
            android:backgroundTint="@color/monaco_purple"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnVerPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_profile"
            android:backgroundTint="@color/monaco_purple"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAdminPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paneladmin"
            android:backgroundTint="@color/monaco_purple"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:backgroundTint="@color/holo_red_light"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
